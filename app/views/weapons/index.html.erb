<% provide(:title, "All Weapons") %>

<h1>All Weapons</h1>

<%= link_to 'Create a new weapon', new_user_weapon_path(current_user) %>

<div class="accordion" id="accordionExample">
  <% weapon_categories = %w(simple_melee simple_ranged martial_melee martial_ranged) %>

  <% weapon_categories.each do |category| %>
  <% cat = @weapons.weapon_index(category, current_user) %>
  <% if cat.any? %>
      <h1 class="weapon__title"><%= split_category(category) %></h1>

      <% cat.each do |weapon| %>
        <%= render "weapon", weapon: weapon %>
      <% end %>
    <% end %>
  <% end %>
</div>
