<div class='col-md-6'>
  <%= form_for(@gear, url: yield(:url_path)) do |f| %>
    <div class="form-group">
      <%= render 'shared/error_messages', model: @gear %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <% if @gear.category %>
        <p><em>Current Category: <%= @gear.category.capitalize %></em></p>
      <% end %>
      <%= f.select(:category, options_for_select([
        ["General", "general"],
        ["Ammunition", "ammunition"],
        ["Arcane Focus", "arcane_focus"],
        ["Druidic Focus", "druidic_focus"],
        ["Holy Symbol", "holy_symbol"]
      ]), {}, class: "form-control") %>
    </div>

    <%= f.label :cost_amount, "Cost" %>
    <div class="row">
      <div class="col">
        <%= f.number_field :cost_amount, class: "form-control" %>
      </div>
      <div class="col">
        <%= f.select(:cost_type, options_for_select([
          ["Copper", "cp"],
          ["Silver", "sp"],
          ["Epsilon", "ep"],
          ["Gold", "gp"],
          ["Platinum", "pp"]
        ]), {}, class: "form-control")%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :weight, "Weight (lbs)" %>
      <%= f.number_field :weight, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :notes, "Description (Not Required)" %>
      <%= f.text_area :notes, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <%= link_to "Cancel", user_gears_path(current_user), class: 'btn btn-warning' %>
    </div>

  <% end %>
</div>
