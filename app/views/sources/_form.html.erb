<div class='col-md-6'>
  <%= form_for(@source, url: yield(:url_path)) do |f| %>
    <div class="form-group">
      <%= render 'shared/error_messages', model: @source %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

   
    <div class="form-group">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <%= link_to "Cancel", sources_path(current_user), class: 'btn btn-warning' %>
    </div>

  <% end %>
</div>
